@import "./helpers/normalize.styl";

* {
  min-width 0
}

html,
body {
  min-width 320px
  height 100%
}

html {
  -webkit-tap-highlight-color: rgba(white, 0)
}

body {
  cursor default
  -moz-osx-font-smoothing: grayscale
  -webkit-font-smoothing: antialiased
  -webkit-text-size-adjust: 100%
  overflow-y scroll
  //color $color-main
  //font-family $font-main
  //font-size $size-main
  //line-height $line-main
  font-family: 'Open Sans', sans-serif;
}


// body
.body {
  display flex
  flex-direction column

  &__wrapper {
    flex 1
    display flex
    flex-direction column
  }

  &__header,
  &__footer {
    flex 0 0 auto
  }

  &__main {
    flex 1
  }

  &__header {
    position absolute
    top 0
    left 0
    right 0
    z-index 120
  }
}

// section
.section {
  box-sizing border-box
  padding-right 20px
  padding-left 20px

  &__wrapper {
    max-width 1240px
    display block
    margin-left auto
    margin-right auto
  }
}

// intro
.intro {
  color white
  height 100vh
  background-image url('../images/bg.png')
  //
  background-position center
  background-size cover
  background-repeat no-repeat
  padding-top 50px
  box-sizing border-box
  padding-bottom 50px
  display flex
  align-items center
  position relative

  &__wrapper {
    flex 1
  }

  &__title {
    font-size 100px
    font-weight 700
    margin-bottom 50px
    line-height 1
  }

  &__desc {
    font-size 14px
    font-weight 300
    line-height 1.3
  }

  &__helper {
    position absolute
    bottom 0
    left 0
    right 0
    z-index 99

    &-content {
      justify-content center
      align-items center
      display flex
      padding 10px
    }

    &-icon {
      width 20px
      height 36px
      background-size contain
      background-repeat no-repeat
      background-position center
      background-image url('../images/mouse.png')
      animation .3s linear fly alternate-reverse infinite
    }
  }
}

// header
.header {
  box-sizing border-box
  padding 20px
  color white

  &__wrapper {
    max-width 1720px
    margin-right auto
    margin-left auto
    box-sizing border-box
  }

  &__content {
    display flex
    align-items center

    &-main {
      flex 1
      margin-right 15px
    }

    &-side {
      flex 0 0 auto
    }
  }
}

.header-main {
  &__wrapper {
    display flex
    align-items center
  }

  &__logo {
    flex 0 0 auto
    margin-right 120px
  }
}

.header-menu {
  &__list {
    display flex
    justify-content center
    align-items center
    margin-right -25px
    margin-left -25px

    &-item {
      margin-right 25px
      margin-left 25px
      flex 0 0 auto
    }
  }

  a {
    text-decoration none
    color white !important

    &:hover {
      opacity 0.8
    }
  }
}

.header-logo {
  display block
  transition .3s linear

  img {
    display block
  }

  &:hover {
    opacity 0.5
  }
}

.phone {
  &__link {
    padding-left 30px
    display block
    text-decoration none
    color white
    position relative
    transition .3s ease

    &:before {
      content ''
      display block
      width 17px
      height 17px
      position absolute
      left 0
      top 0
      background-size contain
      background-repeat no-repeat
      background-position center
      background-image url('../images/phone.png')
    }

    &:hover {
      opacity 0.6
    }
  }
}

.header-actions {
  &__list {
    display flex
    justify-content center
    align-items center
    margin-left -20px
    margin-right -20px

    &-item {
      margin-left 20px
      margin-right 20px
      position relative

      &:after {
        content ''
        display block
        width 1px
        height 50px
        background-color white
        opacity 0.5
        position absolute
        right -20px
        top 50%
        transform translateY(-50%)
      }

      &:last-child {
        &:after {
          display none
        }
      }
    }
  }
}

.button {
  background none
  color white
  cursor pointer
  outline none !important
  transition .3s ease
  padding 0 20px
  border 1px solid white

  &__content {
    display block
  }

  &__title {
    display block
    padding 17px 0 16px 0
  }

  &:hover {
    color black
    background-color white
  }

  &:active {
    opacity 0.5
  }
}

@keyframes fly {
  0% {
    transform translateY(-10px)
  }
  100% {
    transform translateY(10px)
  }
}
